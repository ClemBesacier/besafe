{% extends 'base.html.twig' %}

{% block body %}
    <h1>Connexion!</h1>

    <form action="{{ path('security_login') }}" method="post">
        <div class="form-group">
            <input type="text" name="_username" class="form-control" placeholder="Votre adresse email*" required>
        </div>
        <div class="form-group">
            <input type="password" name="_password" class="form-control" placeholder="Votre mot de passe*" required>
        </div>
        <div class="form-group">
            <button type="submit" class="btn">Me connecter</button>
        </div>
    </form>
{% endblock %}